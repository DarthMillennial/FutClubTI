    <body>
        <div class="main-background"></div>
        <div class="logo" onclick="pageLoadFade();"></div>
        <div class="main-title-division"></div>
        <div class="profile-main">
            <div class="profile-mini" style="display:none">
                <span class="playerTitle">
                    <%=user%>
                </span>
            </div>
            <img src=<%=profileImage%> class="profile-circle" style="display:none;"></img>
            <div class="profile-submenu">
                <a href="/logout"><span ng-click="UserLogout();">Sair</span></a>
            </div>
        </div>
        <div ng-view></div>
    </body>

</html>
<script>
    function pageLoadFade(){
            
            var htmlContent = "<div class='main-page-load-background' style='display:none'>"
                + "<div class='main-page-load'>"
                  + "<div class='main-page-load-logo' style='display:none'></div>"
                    +"<span class='main-page-load-title' style='display:none'>fut.club - produto licenciado</span>"
                    +"<p class='main-page-load-desc01' style='display:none'>o nome fut.club e o logo estão protegidos por copy ritght."
                        +"<br>todos os direitos são reservados - 2016.</p>"
                    +"<p class='main-page-load-desc02' style='display:none'>Para mais informações, acesse: www.futclubapp.com</p>"
                    +"<span class='main-page-load-name' style='display:none'>F U T . C L U B</span>"
                    +"<span class='main-page-load-loading' style='display:none'>carregando...</span>"
                +"</div>"
            "</div>"
            
            $('body').prepend(htmlContent);
            
            $('.main-page-load-background').fadeIn();
    
    		setTimeout(function(){
    			$('.main-page-load-logo').fadeIn();
    		}, 500)
    
    		setTimeout(function(){
    			$('.main-page-load-title').fadeIn();
    		}, 1000)
    
    		setTimeout(function(){
    			$('.main-page-load-desc01').fadeIn();
    		}, 2000)
    		
    		setTimeout(function(){
    			$('.main-page-load-desc02').fadeIn();
    		}, 4000)
    
    		setTimeout(function(){
    			$('.main-page-load-name').fadeIn();
    			$('.main-page-load-loading').fadeIn();
    		}, 6000)
    
    		setTimeout(function(){
    			pageLoadFadeOut();
    		}, 8000)
        }
    	function pageLoadFadeOut(){
    	$('.main-page-load-logo').fadeOut();
    			$('.main-page-load-title').fadeOut();
    			$('.main-page-load-desc01').fadeOut();
    			$('.main-page-load-desc02').fadeOut();
    			$('.main-page-load-background').fadeOut();
    			$('.main-page-load-name').fadeOut();
    			$('.main-page-load-loading').fadeOut();
    	}
</script>