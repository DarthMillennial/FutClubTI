        <script>
            FB.init({
            				appId: '184471455247996',
            				status: true,
            				cookie: true,
            				xfbml: true,
            				xfbml: true,
            				version: 'v2.5'
            			});
            
                $(document).ready(function () {
                    
                    $('.profile-circle').toggle("slow");
                    
                    setTimeout(function (){
                        $('.profile-mini').animate({ opacity: "show" }, 1000);
                    }, 1000);
                    
                    $('.profile-circle').mouseover(function () {
                        $('.profile-submenu').fadeIn();
                    });
                    
                    $('.profile-submenu').mouseleave(function () {
                        $('.profile-submenu').fadeOut();
                    });
                    
                });
        </script>
